<%/* views/contact-details.ejs */%>

<section class="py-16 bg-gray-50">
  <div class="max-w-3xl mx-auto">
    <!-- Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-indigo-600 px-6 py-4">
        <h1 class="text-2xl font-bold text-white">Request Details</h1>
      </div>

      <!-- Body -->
      <div class="p-6 space-y-8">
        <!-- Personal Information -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Personal Information</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">
            <div>
              <p class="text-gray-600 font-medium">Name</p>
              <p class="mt-1 text-gray-900"><%= contact.name %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Email</p>
              <p class="mt-1 text-gray-900"><%= contact.email %></p>
            </div>
          </div>
        </div>

        <!-- Preferred Tour -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Preferred Tour</h2>
          <p class="mt-1 text-gray-900">
            <%= contact.dest?.name || '—' %>
          </p>
        </div>

        <!-- Message -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Message</h2>
          <div class="p-4 bg-gray-100 rounded text-gray-900 whitespace-pre-wrap">
            <%= contact.message %>
          </div>
        </div>

        <!-- Footer -->
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500">
            Submitted on <%= new Date(contact.createdAt).toLocaleString() %>
          </p>
          <a 
            href="/admin?tab=contact" 
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition"
          >
            ← Back to Requests
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
