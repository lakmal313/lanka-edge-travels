<%/* views/contact-details.ejs */%>

<section class="py-16 bg-gray-50">
  <div class="max-w-3xl mx-auto">
    <!-- Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-indigo-600 px-6 py-4">
        <h1 class="text-2xl font-bold text-white">Request Details</h1>
      </div>

      <!-- Body -->
      <div class="p-6 space-y-8">
        <!-- Personal Information -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Personal Information</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">
            <div>
              <p class="text-gray-600 font-medium">Name</p>
              <p class="mt-1 text-gray-900"><%= contact.name %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Email</p>
              <p class="mt-1 text-gray-900"><%= contact.email %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Phone</p>
              <p class="mt-1 text-gray-900"><%= contact.phone || '—' %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Country</p>
              <p class="mt-1 text-gray-900"><%= contact.country || '—' %></p>
            </div>
          </div>
        </div>

        <!-- Trip Details -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Trip Details</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">
            <div>
              <p class="text-gray-600 font-medium">Travel Dates</p>
              <p class="mt-1 text-gray-900">
                <%= contact.dateFrom 
                      ? new Date(contact.dateFrom).toLocaleDateString() 
                      : '—' %>
                –
                <%= contact.dateTo 
                      ? new Date(contact.dateTo).toLocaleDateString() 
                      : '—' %>
              </p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Number of Adults</p>
              <p class="mt-1 text-gray-900"><%= contact.adults ?? '—' %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Number of Children</p>
              <p class="mt-1 text-gray-900"><%= contact.children ?? '—' %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Travel Style</p>
              <p class="mt-1 text-gray-900"><%= contact.travelStyle || '—' %></p>
            </div>
            <div>
              <p class="text-gray-600 font-medium">Budget</p>
              <p class="mt-1 text-gray-900">
                <%= contact.budget ? '$' + contact.budget : '—' %>
              </p>
            </div>
            <div class="sm:col-span-2">
              <p class="text-gray-600 font-medium">Interests</p>
              <p class="mt-1 text-gray-900"><%= contact.interests || '—' %></p>
            </div>
            <div class="sm:col-span-2">
              <p class="text-gray-600 font-medium">Preferred Destination</p>
              <p class="mt-1 text-gray-900"><%= contact.destination?.name || '—' %></p>
            </div>
          </div>
        </div>

        <!-- Message -->
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Additional Message</h2>
          <div class="p-4 bg-gray-100 rounded text-gray-900 whitespace-pre-wrap">
            <%= contact.message || '—' %>
          </div>
        </div>

        <!-- Footer -->
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500">
            Submitted on <%= new Date(contact.createdAt).toLocaleString() %>
          </p>
          <a 
            href="/admin?tab=contact" 
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition"
          >
            ← Back to Requests
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
