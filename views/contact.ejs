<%/* views/contact.ejs */%>

<%/* Hero Header */%>
<section
  id="contact-hero"
  class="relative py-20 bg-cover bg-center"
  style="background-image: url('<%= hero %>');"
  data-aos="fade-up"
  data-aos-duration="800"
>
  <div class="absolute inset-0 bg-black opacity-60"></div>
  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold">
      Get Your Free Personalized Tour Itinerary
    </h1>
    <p class="mt-4 text-lg sm:text-xl lg:text-2xl">
      Share a few details and we’ll craft your perfect Sri Lanka adventure—customized just for you.
    </p>
  </div>
</section>

<%/* Form Section */%>
<section id="contact-form" class="py-16 bg-gray-100">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-3xl bg-white p-8 sm:p-10 rounded-lg shadow-lg">
    <form action="/contact" method="POST" class="space-y-8">
      <% if (selectedDest) { %>
        <input type="hidden" name="destination" value="<%= selectedDest._id %>" />
        <p class="text-gray-700 text-center">
          Inquiring about: <strong><%= selectedDest.name %></strong>
        </p>
      <% } %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- Full Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            placeholder="Your full name"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Email Address -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            placeholder="you@example.com"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Phone / WhatsApp -->
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700">Phone / WhatsApp</label>
          <input
            id="phone"
            name="phone"
            type="tel"
            placeholder="+94 7XX XXX XXX"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Country of Residence -->
        <div>
          <label for="country" class="block text-sm font-medium text-gray-700">Country of Residence</label>
          <input
            id="country"
            name="country"
            type="text"
            placeholder="e.g. United States"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Travel Dates -->
        <div class="sm:col-span-2">
          <label class="block text-sm font-medium text-gray-700">Travel Dates</label>
          <div class="mt-1 grid grid-cols-1 sm:grid-cols-2 gap-4">
            <input
              name="dateFrom"
              type="date"
              required
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
            <input
              name="dateTo"
              type="date"
              required
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
        </div>
        <!-- Adults -->
        <div>
          <label for="adults" class="block text-sm font-medium text-gray-700">Adults</label>
          <input
            id="adults"
            name="adults"
            type="number"
            min="1"
            required
            placeholder="e.g. 2"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Children -->
        <div>
          <label for="children" class="block text-sm font-medium text-gray-700">Children</label>
          <input
            id="children"
            name="children"
            type="number"
            min="0"
            placeholder="e.g. 1"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Preferred Travel Style -->
        <div class="sm:col-span-2">
          <label for="travelStyle" class="block text-sm font-medium text-gray-700">Preferred Travel Style</label>
          <select
            id="travelStyle"
            name="travelStyle"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          >
            <option value="" disabled selected>Select style</option>
            <option>Budget</option>
            <option>Mid-Range</option>
            <option>Luxury</option>
          </select>
        </div>
        <!-- Budget per Person -->
        <div class="sm:col-span-2">
          <label for="budget" class="block text-sm font-medium text-gray-700">Budget per Person (USD)</label>
          <input
            id="budget"
            name="budget"
            type="number"
            min="0"
            placeholder="e.g. 1500"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Interests & Must-See Places -->
        <div class="sm:col-span-2">
          <label for="interests" class="block text-sm font-medium text-gray-700">Interests &amp; Must-See Places</label>
          <input
            id="interests"
            name="interests"
            type="text"
            placeholder="Culture, Wildlife, Beaches…"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
        </div>
        <!-- Additional Requests / Questions -->
        <div class="sm:col-span-2">
          <label for="message" class="block text-sm font-medium text-gray-700">Additional Requests / Questions</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Anything else we should know?"
            class="mt-1 w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          ></textarea>
        </div>
      </div>
      <button
        type="submit"
        class="w-full py-4 px-6 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition focus:outline-none focus:ring-2 focus:ring-green-500"
      >
        Get My Itinerary
      </button>
    </form>
  </div>
</section>
